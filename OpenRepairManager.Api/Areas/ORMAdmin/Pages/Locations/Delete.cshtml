@page
@model OpenRepairManager.Api.Areas.ORMAdmin.Pages.Locations.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Location";
}

<section class="section">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Are you sure you want to delete @Model.Location.LocationName?</h3>
            <h4 class="text-danger"><strong>WARNING!</strong> This action can't be undone!</h4>
            <hr/>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.LocationStreetNo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.LocationStreetNo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.LocationStreetName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.LocationStreetName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.LocationSuburb)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.LocationSuburb)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.LocationPostCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.LocationPostCode)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Location.LocationID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-success" asp-area="ORMAdmin" asp-page="./Index">Cancel</a>
            </form>
        </div>
    </div>
</section>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('#locNavBase').addClass('active');
        });
    </script>
}