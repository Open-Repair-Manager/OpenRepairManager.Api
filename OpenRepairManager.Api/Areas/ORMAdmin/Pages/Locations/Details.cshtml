@page
@model OpenRepairManager.Api.Areas.ORMAdmin.Pages.Locations.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Location Details";
}

<section class="section">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@Model.Location.LocationName</h3>
            <hr/>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.LocationStreetNo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.LocationStreetNo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.LocationStreetName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.LocationStreetName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.LocationSuburb)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.LocationSuburb)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.LocationPostCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.LocationPostCode)
                </dd>
            </dl>
            <div>
                <a class="btn btn-primary" asp-area="ORMAdmin" asp-page="./Edit" asp-route-id="@Model.Location.LocationID">Edit</a>
                <a class="btn btn-light" asp-area="ORMAdmin" asp-page="./Index">Back</a>
            </div>
        </div>
        
    </div>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#locNavBase').addClass('active');
        });
    </script>
}