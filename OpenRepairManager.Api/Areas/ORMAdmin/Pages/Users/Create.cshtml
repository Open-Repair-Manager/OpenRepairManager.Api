@page
@model OpenRepairManager.Api.Areas.ORMAdmin.Pages.Users.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create User";
}

<section class="section">
    <div class="card">
        @if (ViewData["Error"] != null)
        {
            <div class="card-header">
                <div class="alert alert-danger">
                    <h4 class="alert-heading">Error</h4>
                    <p>@ViewData["Error"]</p>
                </div>
            </div>
        }
        else
        {
            <div class="card-header">
                <h4 class="card-title">Create a new User</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Password"></label>
                        <input type="password" asp-for="Password" class="form-control" />
                    </div>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </form>
            </div>
        }
    </div>
</section>
<partial name="_ValidationScriptsPartial"/>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#usersNav').addClass('active');
        });
    </script>
}